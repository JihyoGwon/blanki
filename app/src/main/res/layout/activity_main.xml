<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_background">

    <!-- Main Content Area -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Home Fragment (Default) -->
        <ScrollView
            android:id="@+id/home_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center"
                android:minHeight="600dp">

                <!-- Header Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blanki"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Firebase 구글 로그인"
                        android:textSize="16sp"
                        android:textColor="@color/light_icon"
                        android:gravity="center" />

                </LinearLayout>

        <!-- User Info Section with Material Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

                <TextView
                    android:id="@+id/user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그인이 필요합니다."
                    android:textSize="18sp"
                    android:textColor="@color/light_text"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

                <!-- Button Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.gms.common.SignInButton
                        android:id="@+id/sign_in_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sign_out_button"
                        android:layout_width="200dp"
                        android:layout_height="48dp"
                        android:text="로그아웃"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:cornerRadius="24dp"
                        app:backgroundTint="@color/primary"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Face Maker Fragment (Hidden by default) -->
        <ScrollView
            android:id="@+id/face_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center"
                android:minHeight="600dp">

                <!-- Face Maker Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="얼굴 만들기"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="32dp" />

                <!-- Face Display -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/face_background"
                    android:gravity="center"
                    android:layout_marginBottom="32dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/face_eyes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" o    o "
                            android:textSize="32sp"
                            android:textColor="@color/light_text"
                            android:fontFamily="monospace"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/face_mouth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" ㅅ "
                            android:textSize="32sp"
                            android:textColor="@color/light_text"
                            android:fontFamily="monospace" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Eye Selector -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="눈 선택"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_text"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <Button
                        android:id="@+id/eye_style1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text=" o    o "
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:background="@drawable/button_secondary" />

                    <Button
                        android:id="@+id/eye_style2"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:text=" &gt;    &lt; "
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:background="@drawable/button_secondary" />

                    <Button
                        android:id="@+id/eye_style3"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text=" -    - "
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:background="@drawable/button_secondary" />

                </LinearLayout>

                <!-- Mouth Selector -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입 선택"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_text"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/mouth_style1"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text=" ㅅ "
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:background="@drawable/button_secondary" />

                    <Button
                        android:id="@+id/mouth_style2"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:text="  o  "
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:background="@drawable/button_secondary" />

                    <Button
                        android:id="@+id/mouth_style3"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text=" --- "
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:background="@drawable/button_secondary" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Calendar Fragment (Hidden by default) -->
        <ScrollView
            android:id="@+id/calendar_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center"
                android:minHeight="600dp">

                <!-- Calendar Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="캘린더"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="32dp" />

                <!-- Simple Calendar Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:padding="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📅 캘린더 기능"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/light_text"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘 날짜: "
                        android:textSize="16sp"
                        android:textColor="@color/light_text"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/current_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024년 10월 3일"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <!-- Material 3 Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconTint="@color/primary"
        app:itemTextColor="@color/primary"
        app:labelVisibilityMode="labeled"
        app:elevation="8dp" />

</LinearLayout>
